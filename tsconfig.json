{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["src/*", "./*"],
			"@firebase/auth": [
				"./node_modules/@firebase/auth/dist/index.rn.d.ts"
			]
		},
		"baseUrl": "."
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"env.d.ts",
		"utils/reset-project.js",
		"tailwind.config.js"
	]
}
